@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <!-- Ad banner section -->
    <div class="ad-banner">
        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSLv684nw4jcSIjyXA-VIGUcUfmqMlx3U4v-g&usqp=CAU" alt="Advertisement Banner">
    </div>

    <!-- Book recommendation section -->
    <div class="recommendation">
        <!-- Placeholder for book recommendation content -->
        <h2><i style="font-style: italic;">Book Recommendation</i></h2>
        <div class="search-box">
            <input type="text" placeholder="Search for a book...">
        </div>
        <p>Enter a book you like and the site will analyse our huge database of real readers' favorite books to provide book recommendations and suggestions for what to read next.</p>
    </div>

    <!-- Explore genres section -->
    <div class="genres">
        <h2><i style="font-style: italic;">Popular subjects</i></h2>
        <div class="genre-item">
            <i class="fas fa-book"></i> Romance
        </div>
        <div class="genre-item">
            <i class="fas fa-mystery"></i> Adventure Stories
        </div>
        <div class="genre-item">
            <i class="fas fa-rocket"></i> Fantasy Fiction
        </div>
        <div class="genre-item">
            <i class="fas fa-heart"></i> Manga
        </div>
        <div class="genre-item">
            <i class="fas fa-dragon"></i> Thrillers & Suspence
        </div>
        <div class="genre-item">
            <i class="fas fa-newspaper"></i> Non-Fiction
        </div>
        <div class="genre-item">
            <i class="fas fa-bolt"></i> Time Travel
        </div>
        <div class="genre-item">
            <i class="fas fa-history"></i> Historical Fiction
        </div>
    </div>
</div>
